<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.groupassapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroupAssApplication"
        android:windowSoftInputMode="adjustNothing">
        <activity android:name=".Activites.DetailesBookActivity"></activity>
        <activity android:name=".Activites.EditBookActivity" />
        <activity android:name=".Activites.InsertBookActivity" />
        <activity android:name=".Activites.BookListActivity" />
        <activity android:name=".Activites.InsertCategoryActivity" />
        <activity android:name=".Activites.CategoryListActivity">
            android:windowSoftInputMode="adjustResize"
        </activity>
        <activity android:name=".Activites.HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>